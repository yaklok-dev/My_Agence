{% extends 'base.html.twig' %}

{% block body %}


    <div class="jumbotron">
        <div class="container">
            <div class="row">
                 <div class="col-md-6"></div>
                <div class="col-md-6">
                    <h1>{{ property.title }}</h1>
                    <h2>{{ property.rooms }} péices - {{ property.surface }} m2</h2>
                    <div class="text-primary" style="font-weight: bold; font-size: 30px">{{ property.formatToPrice }}</div>
                    <div class="btn btn-primary" >Contacter l'agence</div>
                </div>
            </div>
        </div>


    </div>

    <div class="container">
         <div class="row">
             <div class="col-md-8">
                 <h2>Caracteristique</h2>
                 <table class="table table-striped">
                      <tr>
                          <td>Surface habitable</td>
                          <td>{{ property.surface }}</td>
                      </tr>

                     <tr>
                         <td>Piéce</td>
                         <td>{{ property.rooms }}</td>
                     </tr>

                     <tr>
                        <td>Chambre</td>
                         <td>{{ property.bedrooms }}</td>

                     </tr>

                     <tr>
                         <td>Etage</td>
                         <td>{{ property.floor }}</td>
                     </tr>

                     <tr>
                         <td>Choffage</td>
                         <td></td>
                     </tr>



                 </table>
             </div>
             <div class="col-md-4">
                 <h2>Spécifique</h2>
             </div>
         </div>

    </div>
{% endblock %}